{
  "compilerOptions": {
    "target": "ES2017",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "react-jsx",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": ["./*"],
      "@real-estate/ai": ["../../packages/ai/src/index"],
      "@real-estate/ai/*": ["../../packages/ai/src/*"],
      "@real-estate/db": ["../../packages/db/src/index"],
      "@real-estate/db/*": ["../../packages/db/src/*"],
      "@real-estate/types": ["../../packages/types/src/index"],
      "@real-estate/types/*": ["../../packages/types/src/*"],
      "@real-estate/integrations/*": ["../../packages/integrations/src/*"]
    }
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts",
    ".next/dev/types/**/*.ts",
    "**/*.mts"
  ],
  "exclude": ["node_modules"]
}
